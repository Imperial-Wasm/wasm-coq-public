{
	"name": "wasm_coq",
	"version": "1.0",
	"description":
		"Wasm formalisation in Coq, following the AFP formalisation of Conrad Watt",
	"license": "MIT",
	"esy": {
		"buildsInSource": "_build",
		"buildEnv": {
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/",
			"COQPATH": "#{parseque.install}/lib/coq/user-contrib:#{compcert.install}/coq:#{coq-iris.install}/user-contrib:#{coq-mathcomp-ssreflect.install}/user-contrib:#{coq-flocq.install}/coq:#{strong-induction.install}/lib/coq/user-contrib:#{@opam/coq-stdpp.install}/user-contrib",
			"VSCODESETTINGS": "{\"coqtop.binPath\":\"#{@opam/coq.root}/bin\",\"coqtop.args\":[\"-coqlib\",\"#{@opam/coq.root}\",\"-R\",\"#{parseque.install}/lib/coq/user-contrib\",\"parseque\",\"-R\",\"#{compcert.install}/coq\",\"compcert\",\"-R\",\"#{coq-iris.install}/user-contrib\",\"iris\",\"-R\",\"#{coq-mathcomp-ssreflect.install}/user-contrib\",\"mathcomp\",\"-R\",\"#{coq-flocq.install}/coq\",\"Flocq\",\"-R\",\"#{strong-induction.install}/lib/coq/user-contrib\",\"StrongInduction\",\"-R\",\"#{@opam/coq-stdpp.install}/user-contrib\",\"stdpp\",\"-R\",\"#{self.root}/_build/default/theories\",\"\"]}"
		},
		"build": "make"
	},
	"scripts": {
		"clean": "make clean",
		"doc": "dune build @doc",
		"test": "dune runtest"
	},
	"dependencies": {
		"@opam/cmdliner": "1.0.4",
		"@opam/coq": "8.10.2",
		"@opam/dune": "~2.4",
		"@opam/odoc": "*",
		"@opam/menhir": "20190626",
		"compcert": "github:Mbodin/CompCert#b004de92d4b2e4a1190855e2190485a89250e366",
		"coq-flocq": "3.2.0",
		"coq-iris": "*",
		"@opam/coq-stdpp": "*",
		"strong-induction": "github:Mbodin/strong-induction#0779e72f0f4c371311b60009606c34fc1f8cd01a",
		"coq-mathcomp-ssreflect": "*",
		"parseque": "github:Mbodin/parseque#11685019ec17d62480fe6f56a45f4a97f739f00d",
		"@opam/linenoise": "*",
		"@opam/mdx": "*"
	},
	"devDependencies": {},
	"resolutions": {
		"coq-mathcomp-ssreflect": {
			"source":
				"github:math-comp/math-comp#ab54764c15886289107ec43b94bc355ada662c4c",
			"override": {
				"dependencies": {
					"@opam/coq": "*"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib/",
					"COQMAKEFILEOPTIONS": "DESTDIR = '#{self.install}' COQMF_WINDRIVE = '#{@opam/coq.lib}/coq'"
				},
				"build": [
					[ "make", "-C", "mathcomp/ssreflect", "-j", "3" ],
					[ "make", "-C", "mathcomp/ssreflect", "install" ]
				]
			}
		},
		"coq-flocq": {
			"source":
				"git:https://gitlab.inria.fr/flocq/flocq.git#a9be51660cd865d323b0b3bbb9faa793856ea0de",
			"version": "3.2.0",
			"override": {
				"dependencies": { "@opam/coq": "8.10.2" },
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib/"
				},
				"build": [
					[ "./autogen.sh" ],
					[ "./configure", "--libdir=#{self.install}/coq/Flocq" ],
					[ "./remake", "--jobs=2" ],
					[ "./remake", "install" ]
				]
			}
		},
		"coq-iris": {
			"source":
				"git:https://gitlab.mpi-sws.org/iris/iris.git#fad7bbcf97bf47131c934e54f53fd8f178be568c",
			"override": {
				"buildsInSource": true,
				"dependencies": {
					"@opam/coq": "8.10.2",
					"@opam/coq-stdpp": "1.2.1"
				},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq-stdpp.install}/user-contrib/"
				},
				"build": [
					[ "#{@opam/coq.bin}/coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq",
						"DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j4" ],
					[ "make", "install" ]
				]
			}
		},
		"@opam/coq-stdpp": {
			"source":
				"git:https://gitlab.mpi-sws.org/iris/stdpp.git#0e698840c2d4fb589fb327c6a53feca50cda21cb",
			"version": "1.2.1",
			"override": {
				"dependencies": {
					"@opam/coq": "8.10.2"
				},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib/"
				},
				"build": [
					[ "#{@opam/coq.bin}/coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq",
						"DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j4" ],
					[ "make", "install" ]
				]
			}
		}
	}
}
