{
	"name": "wasm_coq",
	"version": "1.0",
	"description": "Wasm formalisation in Coq",
	"license": "MIT",
	"esy": {
		"buildsInSource": "_build",
		"buildEnv": {
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/",
			"COQPATH": "#{compcert.install}/coq:#{@opam/coq-stdpp.install}/user-contrib:#{coq-mathcomp-ssreflect.install}/user-contrib:#{parseque.install}/lib/coq/user-contrib:#{coq-flocq.install}/coq:#{coq-iris.install}/user-contrib:#{strong-induction.install}/lib/coq/user-contrib:#{coq-itree.install}/user-contrib:#{coq-ext-lib.install}/user-contrib",
			"VSCODESETTINGS": "{\"coqtop.binPath\":\"#{@opam/coq.root}/bin\",\"coqtop.args\":[\"-coqlib\",\"#{@opam/coq.root}\",\"-R\",\"#{compcert.install}/coq\",\"compcert\",\"-R\",\"#{@opam/coq-stdpp.install}/user-contrib\",\"stdpp\",\"-R\",\"#{coq-mathcomp-ssreflect.install}/user-contrib\",\"mathcomp\",\"-R\",\"#{parseque.install}/lib/coq/user-contrib\",\"parseque\",\"-R\",\"#{coq-flocq.install}/coq\",\"Flocq\",\"-R\",\"#{coq-iris.install}/user-contrib\",\"iris\",\"-R\",\"#{strong-induction.install}/lib/coq/user-contrib\",\"StrongInduction\",\"-R\",\"#{coq-itree.install}/user-contrib\",\"ITree\",\"-R\",\"#{coq-ext-lib.install}/user-contrib\",\"ExtLib\",\"-R\",\"#{self.root}/_build/default/theories\",\"\"]}"
		},
		"build": "make"
	},
	"scripts": {
		"clean": "make clean",
		"doc": "dune build @doc",
		"test": "dune runtest"
	},
	"dependencies": {
		"ocaml": "~4.9",
		"@opam/coq": "8.10.1",
		"coq-flocq": "3.2.0",
    "compcert": "github:Mbodin/CompCert#b004de92d4b2e4a1190855e2190485a89250e366",
		"@opam/coq-stdpp": "*",
		"coq-iris": "*",
		"coq-mathcomp-ssreflect": "*",
		"coq-itree": "github:Mbodin/InteractionTrees#238cbdd6dce3d3f3f9431f1d0c6117ba42674007",
		"parseque": "github:Mbodin/parseque#22b98cc4235266d3c3d2b2eef7ff95b677aaf21c",
		"coq-ext-lib": "*",
		"strong-induction": "github:Mbodin/strong-induction#0779e72f0f4c371311b60009606c34fc1f8cd01a",
		"@opam/cmdliner": "1.0.4",
    "@opam/dune": "~2.6",
		"@opam/linenoise": "*",
		"@opam/mdx": "*"
	},
	"devDependencies": {},
	"resolutions": {
		"coq-mathcomp-ssreflect": {
			"source": "github:math-comp/math-comp#ab54764c15886289107ec43b94bc355ada662c4c",
			"override": {
				"dependencies": {
					"@opam/coq": "*",
					"ocaml": "*"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib",
					"COQMAKEFILEOPTIONS": "DESTDIR = '#{self.install}' COQMF_WINDRIVE = '#{@opam/coq.lib}/coq'"
				},
				"build": [
					[ "make", "-C", "mathcomp/ssreflect", "-j", "3" ],
					[ "make", "-C", "mathcomp/ssreflect", "install" ]
				]
			}
		},
		"coq-flocq": {
			"source": "git:https://gitlab.inria.fr/flocq/flocq.git#a9be51660cd865d323b0b3bbb9faa793856ea0de",
			"version": "3.2.0",
			"override": {
				"dependencies": {
					"@opam/coq": "8.10.1",
					"ocaml": "*"
				},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib"
				},
				"build": [
					[ "./autogen.sh" ],
					[ "./configure", "--libdir=#{self.install}/coq/Flocq" ],
					[ "./remake", "--jobs=2" ],
					[ "./remake", "install" ]
				]
			}
		},
		"coq-iris": {
			"source": "git:https://gitlab.mpi-sws.org/iris/iris.git#69dfcc7191e4cd1954fd6a00e192ad0ebb0697b9",
			"override": {
				"buildsInSource": true,
				"dependencies": {
					"@opam/coq": "8.10.1",
					"@opam/coq-stdpp": "*",
					"ocaml": "*"
				},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq-stdpp.install}/user-contrib:#{@opam/coq.lib}/coq/user-contrib"
				},
				"build": [
					[ "#{@opam/coq.bin}/coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq",
						"DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j4" ],
					[ "make", "install" ]
				]
			}
		},
		"@opam/coq-stdpp": {
			"source": "git:https://gitlab.mpi-sws.org/iris/stdpp.git#6eb05dfc40feef58063bb537fb742eb16bbf86d1",
			"override": {
				"dependencies": {
					"@opam/coq": "8.10.1",
					"ocaml": "*"
				},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib"
				},
				"build": [
					[ "#{@opam/coq.bin}/coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq",
						"DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j4" ],
					[ "make", "install" ]
				]
			}
		},
		"coq-ext-lib": {
			"source": "github:coq-community/coq-ext-lib#ddeab06b09115f66db54b2997df390cd7599eec6",
			"version": "0.11.1",
			"override": {
				"dependencies": {
					"@opam/coq": "*",
					"ocaml": "*"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQMAKEFILE": "Makefile.coq"
				},
				"build": [
					[ "coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq", "-install", "user", "DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j2", "theories" ],
					[ "make", "install" ]
				]
			}
		}
	}
}
